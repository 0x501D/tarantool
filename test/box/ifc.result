================ semaphores =======================
lua sm = box.fiber.semaphore(1)
---
...
lua print(sm.up())
---
error: '[string "return print(sm.up())"]:1: usage: semaphore:up()'
...
lua print(sm.up({}))
---
error: '[string "return print(sm.up({}))"]:1: usage: semaphore:up()'
...
lua print(sm())
---
1
...
lua print(sm:up())
---
2
...
lua print(sm:down())
---
1
...
lua print(sm:down())
---
0
...
lua flag = 1
---
...
lua tfbr = box.fiber.create(function() box.fiber.detach() sm:down() flag = 2 sm:up() end)
---
...
lua box.fiber.resume(tfbr)
---
...
lua flag
---
 - 1
...
