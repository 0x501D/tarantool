================ mutexes =======================
lua m = box.fiber.mutex()
---
...
lua print(m())
---
true
...
lua flag = 0
---
...
lua m:lock()
---
...
lua tfbr = box.fiber.create(function() box.fiber.detach() m:lock() flag = 1 m:unlock() end)
---
...
lua box.fiber.resume(tfbr)
---
...
lua print(flag)
---
0
...
lua box.fiber.sleep(.5)
---
...
lua m:trylock()
---
 - false
...
lua m:unlock()
---
...
lua print(flag)
---
1
...
lua m:locked()
---
 - true
...
lua m = nil
---
...
lua print(m)
---
nil
