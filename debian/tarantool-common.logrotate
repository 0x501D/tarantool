/var/log/tarantool/*.log {
    daily
    size 512k
    missingok
    rotate 10
    compress
    delaycompress
    create 0640 tarantool adm
    postrotate
        if test -d /var/run/tarantool; then
            if [ `ls /var/run/tarantool | wc -l` -gt 0 ]; then
                kill -USR2 `cat /var/run/tarantool/*.pid`
            fi
        fi
    endscript
}
